<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetQuizFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/editTextNoOfQuestions"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Set number of Questions for the quiz (min 3 and max 50)"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        />
    <Button
        android:id="@+id/StartSetQuizActivityBtn"
        android:layout_marginTop="20dp"
        android:text="Set Quiz"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNoOfQuestions"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"/>

    <TextView
        android:id="@+id/alreadySetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Already Set"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"/>
    <Button
        android:id="@+id/deleteQuizBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Quiz"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/StartSetQuizActivityBtn"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"/>

    <Button
        android:id="@+id/ViewQuizResultBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Results"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/deleteQuizBtn"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"/>

</RelativeLayout>